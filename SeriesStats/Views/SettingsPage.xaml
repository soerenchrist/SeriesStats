<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SeriesStats.ViewModels;assembly=SeriesStats"
             x:Class="SeriesStats.Views.SettingsPage"
             BackgroundColor="{DynamicResource WindowBackgroundColor}"
             x:DataType="viewModels:SettingsPageViewModel">
    <ContentPage.Content>
        <StackLayout
            Padding="10">
            <Picker
                ItemsSource="{Binding ThemeOptions}"
                SelectedIndex="{Binding SelectedTheme}"
                Visual="{OnPlatform Android=Default, Default=Material}">
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>